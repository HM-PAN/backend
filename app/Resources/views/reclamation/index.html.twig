{% extends 'baseAdmin.html.twig' %}

{% block pagecontent %}
    <h1>Reclamations list</h1>

<div class="box">
    <div class="box-header">
        <h3 class="box-title">Liste des Reclamation</h3>
      </div>
      <div class="box-body">
    <table id="rectable" class="table table-striped bring-up nth-2-center">
        <thead>
            <tr>
                <th>ID</th>
                <th>Matricule</th>
                <th>Contenu</th>
                <th>Lieu</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td><a href="{{ path('reclamation_show', { 'id': reclamation.id }) }}">{{ reclamation.id }}</a></td>
                <td>{{ reclamation.idControler.matricule }}</td>
                <td>{{ reclamation.contenu }}</td>
                <td>{{ reclamation.lieu }}</td>
                <td>{% if reclamation.date %}{{ reclamation.date|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('reclamation_show', { 'id': reclamation.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('reclamation_edit', { 'id': reclamation.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('reclamation_new') }}">Create a new reclamation</a>
        </li>
    </ul>
    </div>
    </div>
       {% block ownpagejs %}
 <script>
 $(function () {
    $('#rectable').DataTable({
      'paging'      : true,
      'lengthChange': true,
      'searching'   : true,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : true
    })
  })
 </script>
 {% endblock %}
{% endblock %}
