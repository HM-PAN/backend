            </tr>
            <tr>
                <th>Durestationnement</th>
                <td>{{ fichePv.dureStationnement }}</td>
            </tr>
            <tr>
                <th>Datefinabon</th>
                <td>{% if fichePv.dateFinAbon %}{{ fichePv.dateFinAbon|date('Y-m-d') }}{% endif %}</td>
